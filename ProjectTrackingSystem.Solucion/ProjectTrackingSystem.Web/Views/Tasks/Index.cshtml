@model IEnumerable<ProjectTrackingSystem.Domain.Entities.Task>

@{
    ViewBag.Title = "Task Management";
}


<h2 class="text-center mb-4">Task Management</h2>

<div class="container">
    <div class="d-flex justify-content-between mb-3">
        <a href="@Url.Action("Create", "Tasks")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Task
        </a>
    </div>
    <table class="table table-bordered table-hover table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Due Date</th>
                <th>Project</th>
                <th>Assigned User</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.Status</td>
                    <td>@task.DueDate.ToString("MM/dd/yyyy")</td>
                    <td>@task.Project.Name</td>
                    <td>@task.User.FirstName @task.User.LastName</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("Edit", "Tasks", new { id = task.Id })" class="btn btn-primary btn-sm">Edit</a>
                            <a href="@Url.Action("Details", "Tasks", new { id = task.Id })" class="btn btn-info btn-sm">Details</a>
                            <a href="@Url.Action("Delete", "Tasks", new { id = task.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


