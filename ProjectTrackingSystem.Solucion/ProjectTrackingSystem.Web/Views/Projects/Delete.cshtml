@model ProjectTrackingSystem.Domain.Entities.Project

<h1>Delete Project</h1>
<p>Are you sure you want to delete the following project?</p>
<div>
    <h3>@Model.Name</h3>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
    <p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Projects" class="btn btn-secondary">Cancel</a>
</form>

