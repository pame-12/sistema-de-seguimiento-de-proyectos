@model IEnumerable<ProjectTrackingSystem.Domain.Entities.User>

@{
    ViewBag.Title = "User Management";
}

<h2 class="text-center mb-4">User Management</h2>

<div class="container">
    <div class="d-flex justify-content-between mb-3">
        <a href="@Url.Action("Create", "Users")" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Create New User
        </a>
    </div>
    <table class="table table-bordered table-hover table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Role</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Role</td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", "Users", new { id = user.Id })" class="btn btn-primary btn-sm">Edit</a>
                        <a href="@Url.Action("Details", "Users", new { id = user.Id })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Delete", "Users", new { id = user.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
